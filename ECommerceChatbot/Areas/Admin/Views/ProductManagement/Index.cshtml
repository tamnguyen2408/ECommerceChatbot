
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@model IEnumerable<ECommerceChatbot.Models.Product>

<h2>Product List</h2>

<p>
    <a href="/Admin/ProductManagement/AddProduct" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ProductID</th> <!-- Thêm cột ProductID -->
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
     @if (Model != null)
    {   foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td> <!-- Hiển thị ProductID -->
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-secondary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
        else
        {
            <p>No products available</p>
        }

    </tbody>
</table>

